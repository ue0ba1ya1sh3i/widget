{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "widget",
  "version": "1.0.0",
  "identifier": "com.ue0ba1ya1sh3i.widget",
  
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  
  "app": {
    "windows": [
      {
        "label": "widget",
        "title": "widget",
        "url": "/",

        "width": 300,
        "height": 300,

        "decorations": false,
        "resizable": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "maximizable": false,
        "minimizable": false,
        "visible": true,
        "focus": true,
        "center": true
      }
    ],

    "security": {
      "csp": null
    }
  },

  "bundle": {
    "active": true,
    "targets": "all",

    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
